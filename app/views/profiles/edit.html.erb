<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <%= form_with model: @user, url: profile_path, local: true do |f| %>
      <%= render 'shared/error_messages.html.erb', object: f.object %>

      <div class="form-group">
        <%= f.label :email, User.human_attribute_name(:email) %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :last_name, User.human_attribute_name(:last_name) %>
        <%= f.text_field :last_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :first_name, User.human_attribute_name(:first_name) %>
        <%= f.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :avatar, User.human_attribute_name(:avatar) %>
        <%= f.file_field :avatar, class: 'form-control mb-3', accept: 'image/*' %>
        <%= f.hidden_field :avatar_cache %>
       <div class='mt-3 mb-3'>
         <%= image_tag @user.avatar.url, class: 'rounded-circle mr15', width: '50', height: '50' %>
       </div>
      </div>

      <%= f.submit t('.update'), class: 'btn btn-primany' %>
      <% end %>
    </div>
  </div>
</div>
 